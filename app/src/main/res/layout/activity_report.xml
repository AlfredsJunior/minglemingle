<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <Button
        android:id="@+id/inappropriateContentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Inappropriate Content"
        android:textColor="@color/colorControlNormal"
        android:onClick="inappropriateContentButton"
        />

    <Button
        android:id="@+id/spamOrFakeUserButton"
        android:layout_width="match_parent"
        android:textColor="@color/colorControlNormal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Spam or Fake User"
        android:onClick="spamOrFakeUserButton"
        />

    <Button
        android:id="@+id/harassmentButton"
        android:layout_width="match_parent"
        android:textColor="@color/colorControlNormal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Harassment"
        android:onClick="harassmentButton"
        />

    <Button
        android:id="@+id/otherButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorControlNormal"
        android:layout_weight="1"
        android:text="Other"
        android:onClick="otherButton"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/colorControlNormal"
        android:text="Cancel"
        android:onClick="cancelButton"/>
</LinearLayout>



